<% if @survey.title && @question %>
<h2 class='text-center'><%= @survey.title %></h2>
<h3><%= @question.question %></h3>
<%if @options %>
  <% @options.each do |option| %>
    <p><%= option.option %></p>
  <%end  %>
<% end %>
  <form id='frm_survey'>
    <div class="form-group">
      <label for="comment">Option:</label>
      <textarea class="form-control" rows="2" id="comment" name='option'  placeholder="Option..."></textarea>
      <button type="button" class="btn btn-default btn-sm" id='btn_option'>
    <span class="glyphicon glyphicon-send"></span> Commit option 
    </button>
    </div>
    <div class="form-group">
      <button type="button" class="btn pull-right btn-sm" id='btn_end'>
      <span class="glyphicon glyphicon-send"></span> End question 
      </button>
    </div>
  </form>
<% else  %>
  <h2 class='text-center'><%= @survey.title %></h2>
  <form id='frm_survey'>
    <div class="form-group">
      <label for="comment">Question:</label>
      <textarea class="form-control" rows="2" id="comment" name='question'  placeholder="Question..."></textarea>
      <button type="button" class="btn btn-default btn-sm" id='btn_question'>
    <span class="glyphicon glyphicon-ok"></span> Commit question 
    </button>
    </div>
  </form>
<% end  %>